<div class="card">
  <div class="card-header">
    <i class="fa fa-user"></i>
    <% if user.online? %>
     <i class="fa fa-circle text-success"></i> Online

    <% else %>
      <i class="fa fa-circle text-danger"></i>
    <% end %>
    <%= link_to user.email, user_path(user) %>
  </div>
  <div class="card-footer">
    Signed up <%= time_ago_in_words(user.created_at) %> ago
  </div>
  <div class="card-footer">
    <b><%= 'sign_in_count'.humanize %>:</b>
    <%= user.sign_in_count %>
    <div class="row">
      <b><%= 'current_sign_in_at'.humanize %>:</b>
      <%= user.current_sign_in_at %>
    </div>
    <div class="row">
      <b><%= 'last_sign_in_at'.humanize %>:</b>
      <%= user.last_sign_in_at %>
    </div>
    <div class="row">
      <b><%= 'current_sign_in_ip'.humanize %>:</b>
      <%= user.current_sign_in_ip %>
    </div>
    <div class="row">
      <b><%= 'last_sign_in_ip'.humanize %>:</b>
      <%= user.last_sign_in_ip %>
    </div>
  </div>
  <div class="card-footer">
    Confirmed email?
    <% if user.confirmed_at.present? %>
     <span class="text-success"><i class="fas fa-check-circle"></i> Yes</span>

    <% else %>
      <span class="text-danger"><i class="fas fa-times-circle"></i> No</span>

    <% end %>
  </div>
  <div class="card-footer">
    <% user.roles.each do |role| %>
      <span class="btn btn-info rounded-pill px-3"><%= role.name %></span>
    <% end %>
    <% if policy(user).edit? %>
      <%= link_to 'Edit roles', edit_user_path(user), class: 'btn btn-sm btn-warning' %>
    <% end %>
  </div>
</div>
