<div class="card">
  <div class="card-header">
    <i class="fa fa-user"></i>
    <%= user.email %>
  </div>

  <div class="card-footer">
    Signed up <%= time_ago_in_words(user.created_at) %> ago
  </div>

  <div class="card-footer">
    <b><%= 'sign_in_count'.humanize %>:</b> <%= user.sign_in_count %>
    <div class="row">
      <b><%= 'current_sign_in_at'.humanize %>:</b> <%= user.current_sign_in_at %>
    </div>
    <div class="row">
      <b><%= 'last_sign_in_at'.humanize %>:</b> <%= user.last_sign_in_at %>
    </div>
    <div class="row">
      <b><%= 'current_sign_in_ip'.humanize %>:</b> <%= user.current_sign_in_ip %>
    </div>
    <div class="row">
      <b><%= 'last_sign_in_ip'.humanize %>:</b> <%= user.last_sign_in_ip %>
    </div>
  </div>

  <div class="card-footer">
    Confirmed email?
    <% if user.confirmed_at.present? %>
      <span class="btn btn-success">Yes</span>
    <% else %>
      <span class="btn btn-danger">No</span>
    <% end %>
  </div>

  <div class="card-footer">
    <% user.roles.each do |role| %>
      <div class="btn btn-info">
        <%= role.name %>
      </div>
    <% end %>
  </div>
  <%= link_to 'Edit roles', edit_user_path(user), class: 'btn btn-sm btn-warning' %>
</div>
