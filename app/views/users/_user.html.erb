<div class="card shadow-lg mb-4" style="border-radius: 15px;">
  <div class="card-header bg-primary text-white text-center">
    <i class="fa fa-user"></i> <strong><%= user.email %></strong>
  </div>
  <div class="card-body">
    <h5 class="card-title">User Information</h5>
    <p class="card-text">
      <strong>Signed up:</strong> <%= time_ago_in_words(user.created_at) %> ago
    </p>
    <ul class="list-unstyled">
      <li><strong>Sign in count:</strong> <%= user.sign_in_count %></li>
      <li><strong>Current sign in at:</strong> <%= user.current_sign_in_at %></li>
      <li><strong>Last sign in at:</strong> <%= user.last_sign_in_at %></li>
      <li><strong>Current sign in IP:</strong> <%= user.current_sign_in_ip %></li>
      <li><strong>Last sign in IP:</strong> <%= user.last_sign_in_ip %></li>
    </ul>
  </div>
  <div class="card-footer text-center text-muted">
    <small>Account created <%= time_ago_in_words(user.created_at) %> ago</small>
  </div>
</div>
