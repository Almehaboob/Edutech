<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white p-2">
          <h5 class="mb-0">
            <i class="fas fa-graduation-cap"></i> Enrollment Details
          </h5>
        </div>
        <div class="card-body p-3">
          <!-- User Details -->
          <div class="mb-2">
            <h6>
              <i class="fas fa-user text-primary"></i> 
              <%= link_to @enrollment.user.email, user_path(@enrollment.user), class: 'text-dark text-decoration-none' %>
            </h6>
            <small class="text-muted">
              <i class="fas fa-clock"></i> Enrolled <%= time_ago_in_words(@enrollment.created_at) %> ago
            </small>
          </div>
          
          <!-- Course Details -->
          <div class="mb-2">
            <h6>
              <i class="fas fa-book text-primary"></i> 
              <%= link_to @enrollment.course.title, course_path(@enrollment.course), class: 'text-dark text-decoration-none' %>
            </h6>
            <span class="badge bg-success">
              <i class="fas fa-layer-group"></i> Level: <%= @enrollment.course.level %>
            </span>
          </div>
          
          <!-- Rating and Review -->
          <div>
            <h6>
              <i class="fas fa-star text-warning"></i> Rating: 
              <span class="text-dark"><%= @enrollment.rating %>/5</span>
            </h6>
            <p class="text-muted mb-0">
              <i class="fas fa-comment"></i> <%= @enrollment.review %>
            </p>
          </div>
        </div>

        <% if current_user %>
          <!-- Footer Buttons -->
          <div class="card-footer d-flex justify-content-between p-2">
            <% if policy(@enrollment).edit? %>
              <%= link_to 'Edit Review', edit_enrollment_path(@enrollment), class: 'btn btn-outline-primary btn-sm' %>
            <% end %>
            <%= link_to 'Back', enrollments_path, class: 'btn btn-outline-secondary btn-sm' %>
            <%#>= link_to 'delete', destroy_enrollment_path(@enrollment), data: { turbo_method: :delete}, class: 'btn btn-outline-danger btn-sm' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
