
<div class="card mt-2" style="max-width: 600px; margin: auto; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
  <div class="card-header text-center">
    <h4>Enrollment Details</h4>
  </div>
  <div class="card-body">
    <p>
      <strong>Course:</strong> <%= @enrollment.course %>
    </p>
    <p>
      <strong>User:</strong> <%= @enrollment.user %>
    </p>
    <p>
      <strong>Rating:</strong> <%= @enrollment.rating %>
    </p>
    <p>
      <strong>Review:</strong> <%= @enrollment.review %>
    </p>
    <p>
      <strong>Price:</strong> <%= number_to_currency(@enrollment.price) %>
    </p>
  </div>
  <div class="card-footer text-end">
    <%= link_to 'Edit', edit_enrollment_path(@enrollment), class: 'btn btn-primary btn-sm' %>
    <%= link_to 'Back', enrollments_path, class: 'btn btn-secondary btn-sm' %>
  </div>
</div>
