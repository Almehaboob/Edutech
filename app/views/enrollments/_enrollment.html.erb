<div class="card">
  <div class="card-header">
    <i class="fa fa-user"></i>
    <%= link_to enrollment.user.username, user_path(enrollment.user) %>
    <i class="fa fa-clock"></i>
    <%= time_ago_in_words(enrollment.updated_at) %>
    <i class="fa fa-graduation-cap"></i>
    <%= link_to enrollment.course, course_path(enrollment.course) %>
  </div>
  
  <div class="card-body">
    <i class="text-warning fa fa-star"></i>
    <b><%= enrollment.rating %></b>
    <i class="fa fa-comment"></i>
    <small><%= enrollment.review %></small>
  </div>
  
  <% if current_user %>
    <div class="card-footer">
      <% if policy(enrollment).edit? %>
        <%= link_to 'Edit Review', edit_enrollment_path(enrollment) %>
      <% end %>
    </div>
  <% end %>
</div>
