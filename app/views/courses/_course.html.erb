<div class="card">
  <div class="card-header">
    <i class="fa fa-graduation-cap"></i>
    <%= link_to course.title, course_path(course) %>
  </div>
  <div class="card-body">
    <small><%= simple_format(course.short_description) %></small>
  </div>
  <div class="card-footer text-center">
    <%= number_to_currency(course.price) %>
  </div>
  <div class="card-footer">
    <i class="fa fa-book"></i>
    <%= course.lessons.count %>
  </div>
  <div class="card-footer">
    <div class="row">
      <div class="col-md-6">
        <i class="fa fa-globe-africa"></i>
        <%= course.languaes %>
      </div>
      <div class="col-md-6 text-right">
        <i class="fa fa-signal"></i>
        <%= course.level %>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <div class="row">
      <div class="col-md-6">
        <i class="far fa-clock"></i>
        <%= course.created_at.strftime('%d-%b-%Y') %>
      </div>
      <div class="col-md-6 text-right">
        <i class="fa fa-chalkboard-teacher"></i>
        <%= course.user.username %>
      </div>
    </div>
  </div>
  <% if current_user %>
    <% if policy(course).edit? %>
      <div class="card-footer">
        <%= link_to 'Edit', edit_course_path(course), class: 'btn btn-sm btn-warning' %>
      </div>
    <% end %>
    <% if policy(course).destroy? %>
      <div class="card-footer">
        <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
      </div>
    <% end %>
  <% end %>
</div>
